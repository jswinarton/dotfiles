if ! git config --local user.name > /dev/null
then
	echo "The user name for this repository has not been set.\n\nUse 'git config --local user.name User Name' to set a user name for this git repository." 1>&2
	exit 1
elif ! git config --local user.email > /dev/null
then 
	echo "The user email for this repository has not been set.\n\nUse 'git config --local user.email user@example.com' to set a user email for this git repository." 1>&2
fi

exit 0