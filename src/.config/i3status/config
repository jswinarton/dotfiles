general {
  colors = true
  color_good = "#AAAAAA"
  interval = 5
}

order += "disk /"
order += "ethernet _first_"
order += "load"
order += "volume master"
order += "tztime date"
order += "tztime time"


ethernet _first_ {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "%ip (%speed)"
        format_down = "Ethernet down"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

tztime date {
        format = "%Y-%m-%d"
}

tztime time {
        format = "%H:%M:%S"
}

load {
        format = "%1min %5min %15min"
}

disk "/" {
        format = "%free"
}

volume master {
        format = "♪ %volume"
        format_muted = "♪ muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
