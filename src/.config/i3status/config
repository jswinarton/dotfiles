general {
  colors = true
  color_good = "#AAAAAA"
  interval = 1
}

order += "disk /"
order += "disk /home"
order += "ethernet _first_"
order += "load"
order += "volume master"
order += "tztime date"
order += "tztime time"
order += "tztime timemunich"
order += "tztime timeaus"
order += "tztime timeutc"


disk "/" {
        format = "%free"
}

disk "/home" {
        format = "%free"
}

ethernet _first_ {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "%ip (%speed)"
        format_down = "Ethernet down"
}

load {
        format = "%1min %5min %15min"
}

volume master {
        format = "V %volume"
        format_muted = "V muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime date {
        format = "%Y-%m-%d"
}

tztime time {
        format = "%H:%M"
}

tztime timeaus {
        format = "%H:%M AWST"
        timezone = "Australia/Perth"
}

tztime timemunich {
        format = "%H:%M CET"
        timezone = "Europe/Berlin"
}

tztime timeutc {
        format = "%H:%M:%S UTC"
        timezone = "UTC"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}
