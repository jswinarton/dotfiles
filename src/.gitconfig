[alias]
  # basic aliases
  b=rev-parse --abbrev-ref HEAD
  br=branch
  ci=!git force-local-config && git commit --verbose
  cl=clone
  co=checkout
  st=status -s
  root=rev-parse --show-toplevel

  # diffs
  d=!ydiff -s
  dd=!ydiff  # "diff unified"
  sd=!ydiff -s --staged  # "staged diff"
  sdd=!ydiff --staged  # "staged diff unified"

  # logs
  l=log --oneline

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore

[gpg]
  program = gpg

[commit]
  gpgsign = true
