[alias]
  b=rev-parse --abbrev-ref HEAD
  br=branch
  ci=!git force-local-config && git commit --verbose
  cl=clone
  co=checkout
  d=diff
  l="log --pretty=format:'%C(yellow)%h%C(reset) %s%C(#6BBA38)%d%C(reset)' --abbrev-commit"
  sdiff=diff --staged
  sd=diff --staged
  st=status -s
  root=rev-parse --show-toplevel

  # see unique commits not shared between two branches.
  # usage:
  # git branchdiff master...feature-branch
  branchdiff="log --left-right --cherry-pick --oneline"

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore
